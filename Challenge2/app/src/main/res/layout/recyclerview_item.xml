<?xml version="1.0" encoding="utf-8"?>
<com.example.challenge2.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:background="@drawable/rounded_edge">

    <TextView
        android:id="@+id/titleView"
        style="@style/word_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Title of a given note" />

    <TextView
        android:id="@+id/bodyView"
        style="@style/word_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textSize="14sp"
        tools:text="body of a given note" />

</com.example.challenge2.SquareLinearLayout>